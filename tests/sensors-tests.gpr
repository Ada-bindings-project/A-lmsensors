with "syst/syst_default.ss/syst_default.gpr";
with "../sensors.gpr";

project Sensors.Tests is

   for Source_Dirs use ("src/**");
   for Languages use ("Ada");
   for Object_Dir use ".obj/" & project'Name;
   for Exec_Dir use "bin";

   package Builder is
      for Default_Switches ("ada") use Syst_Default.Builder'Default_Switches ("Ada");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use Syst_Default.Compiler'Default_Switches ("Ada");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use Syst_Default.Binder'Default_Switches ("Ada");
   end Binder;

   for Main use ("sensors-tests-main.adb");

end Sensors.Tests;

